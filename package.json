{
  "name": "doc-pipeline-claude-cjs",
  "version": "1.0.0",
  "description": "Windows-friendly Document AI pipeline CLI (CommonJS) with Claude/OpenAI/Ollama providers.",
  "bin": {
    "doc-pipeline": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "docker:build": "docker build -t doc-pipeline:latest .",
    "docker:run:pwsh": "docker run --rm -v ${PWD}:/work -e PDF_FILE=/work/reference-docs/ssrn-5298091.pdf -e OUT_FILE=/work/out.json doc-pipeline:latest",
    "docker:run:cmd": "docker run --rm -v %cd%:/work -e PDF_FILE=/work/reference-docs/ssrn-5298091.pdf -e OUT_FILE=/work/out.json doc-pipeline:latest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^4.4.1",
    "formdata-node": "^6.0.3",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.7",
    "openai": "^4.59.1",
    "p-limit": "^6.1.0",
    "pdf-parse": "^1.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}


